# CollabGPT Environment Configuration
# Copy this file to .env and fill in your values

# Application Environment
COLLABGPT_ENV=development  # Options: development, production, testing

# Google API Settings
GOOGLE_CREDENTIALS_PATH=credentials/google_credentials.json
GOOGLE_USE_SERVICE_ACCOUNT=false

# Webhook Settings
WEBHOOK_HOST=localhost
WEBHOOK_PORT=8000
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET_KEY=your_webhook_secret_key_here
WEBHOOK_EXTERNAL_URL=https://your-public-url.com/webhook

# Document Processing Settings
MAX_SUMMARY_SENTENCES=3
SIGNIFICANT_CHANGE_THRESHOLD=5
DEFAULT_LANGUAGE=english
HISTORY_RETENTION_DAYS=30
CACHE_ENABLED=true

# Collaboration Features
CONFLICT_WINDOW_SECONDS=60
ACTIVITY_RETENTION_DAYS=14
SIMILARITY_THRESHOLD=0.7
NOTIFY_ON_CONFLICTS=true
COMMENT_CATEGORIZATION=true
LATENCY_THRESHOLD_MS=500
CRITICAL_CHANGE_KEYWORDS=urgent,critical,deadline,important

# AI Processing Settings
RAG_ENABLED=true
LLM_MODEL_PATH=path/to/your/local/model
LLM_API_KEY=your_api_key_here
LLM_API_URL=https://api.example.com/v1
MAX_CONTEXT_LENGTH=4096
LLM_TEMPERATURE=0.5

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=data/collabgpt.log
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5
PERFORMANCE_LOGGING=true

# Feature Flags
FEATURE_REAL_TIME_MONITORING=true
FEATURE_COMMENT_ANALYSIS=true
FEATURE_EDIT_SUGGESTIONS=false
FEATURE_CONFLICT_DETECTION=true
FEATURE_ACTIVITY_TRACKING=true
FEATURE_INTELLIGENT_SUMMARIES=true
FEATURE_PERFORMANCE_MONITORING=true